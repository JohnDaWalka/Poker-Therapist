{
  "name": "therapy-rex-windows",
  "version": "1.0.0",
  "description": "Therapy Rex Windows Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "electron-builder"
  },
  "dependencies": {
    "vue": "^3.3.0",
    "vue-router": "^4.2.0",
    "vuex": "^4.1.0",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "@babel/traverse": "^7.23.2",
    "cipher-base": "^1.0.5"
  },
  "resolutions": {
    "@babel/traverse": "^7.23.2",
    "cipher-base": "^1.0.5"
  },
  "build": {
    "appId": "com.therapyrex.app",
    "productName": "Therapy Rex",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.png"
    }
  }
}
