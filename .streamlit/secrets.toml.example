# Streamlit Secrets Configuration
# Copy this file to .streamlit/secrets.toml and add your AI provider API key(s)

# Chatbot Provider Selection (optional, defaults to openai)
# Options: openai, anthropic, google, xai, perplexity
CHATBOT_PROVIDER = "openai"

# OpenAI API Key (for ChatGPT - GPT-4, GPT-3.5, etc.)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY = "sk-your-openai-api-key-here"

# Anthropic API Key (for Claude)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY = "your-anthropic-api-key-here"

# Google AI API Key (for Gemini)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY = "your-google-api-key-here"

# x.ai API Key (for Grok)
# Get your API key from: https://x.ai/api
XAI_API_KEY = "xai-your-api-key-here"

# Perplexity API Key (for Perplexity AI with real-time research)
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY = "your-perplexity-api-key-here"

# Optional: Enable/disable streaming responses
ENABLE_STREAMING = true

# Optional: Enable/disable thinking display
ENABLE_THINKING = true
